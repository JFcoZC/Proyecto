<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udlap.ingsoft.proyecto.EjercicioOrtografia"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/reedapple">


            <ImageButton
                android:id="@+id/HomeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_weight="0.01"
                android:clickable="true"
                android:onClick="HomeClick"
                android:background="@color/transparent"
                app:srcCompat="@drawable/homebut_style" />

            <ImageButton
                android:id="@+id/previo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:scaleType="fitCenter"
                android:layout_weight="0.1"
                android:background="@color/transparent"
                android:rotation="180"
                android:adjustViewBounds="true"
                android:maxHeight="40dp"
                android:maxWidth="50dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:onClick="nextPrev"
                app:srcCompat="@drawable/flecha_style"/>

            <ImageButton
                android:id="@+id/siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.1"
                android:maxHeight="40dp"
                android:maxWidth="50dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                app:srcCompat="@drawable/flecha_style"
                android:adjustViewBounds="true"
                android:onClick="nextPrev"/>


        </LinearLayout>

    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">

        <ViewFlipper
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="parent"
            android:id="@+id/ViewFlipper"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="imagenClick"
            android:clickable="true">

            <ImageView
                android:id="@+id/imagenBurro"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/burro"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenVaca"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/vaca"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenJirafa"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/jirafa"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenArbol"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/arbol"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenCielo"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/cielo"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenVolcan"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/volcan"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenAvion"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/avion"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenTelevision"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/television"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenPolicia"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/policia"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenLlave"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/llaves"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />
            <ImageView
                android:id="@+id/imagenCelular"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/celular"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />


        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:isIndicator="true"
            android:numStars="3"
            android:theme="@style/RatingBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="315dp"/>
    </LinearLayout>


    <LinearLayout android:weightSum="1"
        android:layout_weight="0.2"
        android:gravity="center">

        <CheckBox
            android:id="@+id/burro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="burro"
            android:onClick="checkBoxclick"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="burro"
            />

        <CheckBox
            android:id="@+id/vurro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vurro"
            android:onClick="checkBoxclick"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="vurro"
            />

    </LinearLayout>

</TableLayout>