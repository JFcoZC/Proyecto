<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udlap.ingsoft.proyecto.EjercicioOrtografia"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">
        <Button
            android:id="@+id/previo"
            android:text="previo"
            android:layout_width="88dp"
            android:layout_height="35dp"
            tools:layout_alignParentLeft="true"
            tools:layout_alignParentRight = "true"
            app:layout_constraintLeft_toRightOf="@+id/HomeButton"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/siguiente"
            android:text="sig"
            android:layout_width="88dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@+id/previo"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent" />

        <!-- NO OLVIDARSE DE PONER TRUE EN clickable porque si no no hace nada el boton -->
        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="HomeClick"
            android:clickable="true"
            app:srcCompat="@drawable/home"
            tools:layout_alignParentLeft="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">

        <ViewFlipper
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="parent"
            android:id="@+id/ViewFlipper"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="imagenClick"
            android:clickable="true">

            <ImageView
                android:id="@+id/imagenBurro"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/burro"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenVaca"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/vaca"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />

            <ImageView
                android:id="@+id/imagenJirafa"
                android:layout_width="@dimen/size_photos_width"
                android:layout_height="@dimen/size_photos_height"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/jirafa"
                tools:layout_alignParentLeft="true"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="26dp" />



        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:isIndicator="true"
            android:numStars="3"
            android:theme="@style/RatingBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="315dp"/>
    </LinearLayout>


    <LinearLayout android:weightSum="1"
        android:layout_weight="0.2"
        android:gravity="center">

        <CheckBox
            android:id="@+id/burro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="burro"
            android:onClick="checkBoxclick"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="burro"
            />

        <CheckBox
            android:id="@+id/vurro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vurro"
            android:onClick="checkBoxclick"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="vurro"
            />

    </LinearLayout>

</TableLayout>