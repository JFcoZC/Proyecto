<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udlap.ingsoft.proyecto.MainActivity">

    <CheckBox
        android:id="@+id/pa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pa"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="pa"
        android:onClick="checkBoxclick"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/pi"
        app:layout_constraintRight_toLeftOf="@+id/no"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <!-- DIBUJAR IMAGEN -->


    <CheckBox
        android:id="@+id/ne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ne"
        android:onClick="checkBoxclick"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="ne"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="350dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="60dp" />

    <CheckBox
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no"
        android:onClick="checkBoxclick"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/ne"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="60dp" />

    <!--Checkbox pi -->
    <!-- Cuando se haga click en esta manda a llamar la funcion checkBoxclick -->

    <CheckBox
        android:id="@+id/pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pi"
        android:onClick="checkBoxclick"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        app:layout_constraintRight_toLeftOf="@+id/ne"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <!-- isIndicator = true -> el usuario no puede modificar el rating -->
    <!--theme="@style/.. Usa los colores para las estrellas ubicados en RatingBar
     dentro del archivo colors.xml -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewFlipper"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:theme="@style/RatingBar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!--PASAR LAS IMAGENES-->
    <ViewFlipper
        android:layout_width="@dimen/size_photos_width"
        android:layout_height="@dimen/size_photos_height"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="14dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/ViewFlipper"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pino" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/foto" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/jabon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/mapa" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/toro" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/size_photos_width"
            android:layout_height="@dimen/size_photos_height"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/torta" />


    </ViewFlipper>
    
    <!--BOTONES PREVIOS & NEXT IMAGE -->
    <Button
        android:id="@+id/previo"
        android:text="previo"
        android:layout_width="88dp"
        android:layout_height="35dp"
        tools:layout_alignParentLeft="true"
        tools:layout_alignParentRight = "true"
        app:layout_constraintLeft_toRightOf="@+id/HomeButton"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/siguiente"
        android:text="sig"
        android:layout_width="88dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/previo"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- NO OLVIDARSE DE PONER TRUE EN clickable porque si no no hace nada el boton -->
    <ImageButton
        android:id="@+id/HomeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="HomeClick"
        android:clickable="true"
        app:srcCompat="@drawable/home"
        tools:layout_alignParentLeft="true" />

</android.support.constraint.ConstraintLayout>
